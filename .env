# Bot Configuration
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Owner Configuration (Only this user can set ranks)
OWNER_ID=your_telegram_user_id_here

# Logging
LOG_CHANNEL_ID=your_log_channel_id_here

# Modules Directory
# This is the folder where your custom modules will be loaded from
# Default is "modules" - you can change it to any folder name
MODULES_DIR=modules

# Debug Mode
# Set to True to enable debug logging (shows detailed function calls and line numbers)
# Useful for development and troubleshooting
# Set to False for production
DEBUG=False

# Database is automatically created as bot_database.db
# No configuration needed - uses SQLite
